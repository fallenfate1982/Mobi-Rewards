@model MobileReward.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()    
    <div id="signup_box">        
        <h1>Welcome to MobiRewards</h1>
        
        <h2>Sign up for MobiRewards account</h2>
        <span>Enter User Name:</span>
        @Html.TextBoxFor(m => m.UserName, new { @class = "textfont" })
        <div>
            <div class="signup_password">
                <span style="padding-left: 0px;">Your Password:</span>
                @Html.PasswordFor(m => m.Password)
            </div>
            <div class="signup_confirmpassword">
                <span style="padding-left: 0px;">Confirm Password:</span>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="clear">&nbsp;</div>
        <span>Company Registration Number:</span>
        @Html.TextBoxFor(m => m.CompanyRegistrationNo)
        <span>Enter Your Email:</span>
        @Html.TextBoxFor(m => m.Email)
        <span>Enter Your Address:</span>
        @Html.TextBoxFor(m => m.Address)
        <span>Enter Contact Number:</span>
        @Html.TextBoxFor(m => m.ContactNo)
        <br />
        <span>Ex. xxx-xxx-xxxx</span>
        <div class="clear">&nbsp;</div>
        <div>
            <div class="check">
                <input type="checkbox" checked="checked" id="terms">
            </div>
            <div class="check_text"><span style="text-align: left; font-size: 13px;">By clicking Sign Up, you agree to our Terms and Conditions, that you have read our Data Use Privacy &amp; Policy.</span></div>
        </div>
        <div class="clear">&nbsp;@Html.ValidationSummary(false)</div>
        <input type="submit" value="Register" class="button_sigin" id="login" />
        <div class="clear">&nbsp;</div>
        
    </div>

        
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script>
        $(document).ready(function() {
            $("#login").click(function () {
                if ($("#terms").is(":checked")) {
                    return true;
                } else {
                    alert("Please accept our terms and condition.");
                    return false;
                }
            });
        });
    </script>
    
}
