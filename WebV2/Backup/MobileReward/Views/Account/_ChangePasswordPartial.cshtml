@model MobileReward.Models.LocalPasswordModel

@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()

    <div class="right_side_box">
        <span style="text-align:center;">@Html.ValidationSummary(false)</span>
        <h1 style="font-size: 15px; padding-left: 16px;">Change Password</h1>
        <div class="right_side_innerbox">
            <div class="box_table">
                <div class="table_text_pass">Enter current password:</div>
                <div class="table_box_pass">
                    @Html.PasswordFor(m => m.OldPassword)
                </div>
                <div class="table_text_pass">New Password:</div>
                <div class="table_box_pass">
                    @Html.PasswordFor(m => m.NewPassword)
                </div>
                <div class="table_text_pass">Confirm Password:</div>
                <div class="table_box_pass">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
                <div class="clear">&nbsp;</div>
            </div>
        </div>
        <div>
            <a href="#">
                <input type="submit" value="Save" class="button_account" id="accounts" />
            </a>
        </div>
        <div class="clear">&nbsp;</div>
        @if (!String.IsNullOrWhiteSpace(@ViewBag.StatusMessage))
        {
            <div class="success">@ViewBag.StatusMessage</div>
        }
        <br/>
        
        
    </div>
}
