@model MobileReward.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    
    <div id="signin_box" >
        <span style="text-align:center;">
        <h1>Welcome to MobiRewards</h1>
        <h2>Sign in with your MobiRewards Login Id</h2>
        <span>Enter User Name:</span>
        @Html.TextBoxFor(m => m.UserName, new { @class = "textfont" })
        <span>Your Password:</span>
        @Html.PasswordFor(m => m.Password, new { @class = "textfont" })
            @Html.ValidationSummary(false)</span>
        <div class="clear">&nbsp;</div>
        <input type="submit" value="Login" id="login" class="button_sigin" /> <br />
        <span>
            <a href="@Url.Action("ForgetPassword", "Account")" style="text-decoration:underline; color:#095fb0;">Forgot Password</a>.</span>
        <div class="clear">&nbsp;</div>        
        <span>            
            If you dont't have an account please <a href="@Url.Action("Register", "Account")" style="text-decoration:underline; color:#095fb0;">Sign up here</a>.
        </span>
        <div class="clear">&nbsp;</div>
        
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
