@model MobileReward.Models.UserProfile
@{
    ViewBag.Title = "Forget Password";
}

@using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="signin_box" >        
        <h1>Welcome to MobiRewards</h1>
        <h2>Please enter your user name or email  to get password</h2>
        <span>User Name or Email:</span>
        @Html.TextBoxFor(m => m.UserName, new { @class = "textfont" })
        @Html.ValidationMessageFor(m => m.UserName)
        <span style="text-align:center;">@Html.ValidationSummary(true)</span>
        <div class="clear">&nbsp;</div>
        <input type="submit" value="Submit" id="login" class="button_sigin" /> <br />        
        <div class="clear">&nbsp;</div>
        
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

